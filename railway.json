{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile",
    "watchPatterns": [
      "Dockerfile",
      "sshd_config",
      "banner.txt",
      "tmux.conf",
      "scripts/**",
      "s6-overlay/**",
      "fail2ban/**"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
